	text-align: center;
	line-height: 200rpx;
}
.flex-middle {
	width: 25%;
	height: 200rpx;
	text-align: center;
	line-height: 200rpx;
}
.flex-right {
	width: 65%;
	height: 200rpx;
	text-align: center;
